# http://editorconfig.org
root = true

# Default files
[*]
charset = utf-8
indent_size = 2
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_size = 4

# Makefile files
[Makefile]
indent_style = tab

# Minified files
[*.min.*]
insert_final_newline = false
